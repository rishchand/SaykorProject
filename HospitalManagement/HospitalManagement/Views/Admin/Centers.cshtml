@*Screen Specific Scripts*@
<script type="text/javascript" src="~/Scripts/CPC/Admin/Center/INIT.js"></script>
<script type="text/javascript" src="~/Scripts/CPC/Admin/Center/UI.js"></script>
<script type="text/javascript" src="~/Scripts/CPC/Admin/Center/CRUD.js"></script>
<div id="normal-header">
    <table style="height: 40px; width: 100%">
        <tr>
            <td>CENTER MANAGEMENT</td>
            <td align="right">
                <input type="button" value="Add New" id="jqxCntBtnAdd" onclick="AddCenterRecord();" />
            </td>
        </tr>
    </table>
</div>
<div id="progressContainer" class="progressLabelHidden">
    Please Wait...
</div>
<div id="mainSplitter1">
    <div>
        <div id='jqxCenterWidget' style="font-size: 10px; font-family: Verdana; float: left; padding-bottom: 10px; width: 100%">
            <div id="jqxCentergrid"></div>
        </div>
    </div>
    <div>
        <div style="height: 92%; width: 100%; border-bottom: 1px solid #aaaaaa; overflow-y: scroll">
            <table width="100%">
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Center Id
                    </td>
                    <td>
                        <input type="text" id="jqxCntIdTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Center Name
                    </td>
                    <td>
                        <div id='jqxCntNameDdn'></div>
