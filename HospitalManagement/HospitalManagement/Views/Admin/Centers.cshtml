                </tr>

                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Director Id
                    </td>
                    <td>
                        <input type="text" id="jqxCntDirectorIdTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Director
                    </td>
                    <td>
                        <input type="text" id="jqxCntDirectorTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Contract Date
                    </td>
                    <td>
                        <div id='jqxCntContractDateCal'></div>
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Contract Description
                    </td>
                    <td>
                        <input id='jqxCntContractDescriptionTxt' />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Project Id
                    </td>
                    <td>
                        <input id='jqxCntProjectIdTxt' />
