        <table style="width: 100%;">
            <tr>
                <td align="right">
                    <input type="button" value="Delete" id="jqxCntBtnDelete" onclick="deleteCenterButtonClick()" />
                    <input type="button" value="Save" id="jqxCntBtnSave" onclick="saveCenterButtonClick()" />
                    <input type="button" value="Cancel" id="jqxCntBtnCancel" onclick="CancelCenterRowEdit();" />
                </td>
            </tr>
        </table>
    </div>
