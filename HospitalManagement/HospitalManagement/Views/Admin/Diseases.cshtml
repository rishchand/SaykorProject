@{
    ViewBag.Title = "Diseases";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/iCheck/jquery.icheck.js"></script>
<link href="~/iCheck/skins/square/grey.css" rel="stylesheet" />
@*CPC Common SCripts*@
<script type="text/javascript" src="~/Scripts/CPC/cpcCommon.js"></script>
<script type="text/javascript" src="~/Scripts/CPC/cpcCommonLookups.js"></script>
<script type="text/javascript" src="~/Scripts/epicapi.js"></script>

@*Temp Script*@
@*<script type="text/javascript" src="~/Scripts/CPC/Provider/Temp.js"></script>*@

@*Screen Specific Scripts*@
<script type="text/javascript" src="~/Scripts/CPC/Admin/Diseases/INIT.js"></script>
<script type="text/javascript" src="~/Scripts/CPC/Admin/Diseases/UI.js"></script>
<script type="text/javascript" src="~/Scripts/CPC/Admin/Diseases/CRUD.js"></script>
<div id="normal-header">
    <table style="height: 40px; width: 100%">
        <tr>
            <td>DISEASE MANAGEMENT</td>
            <td align="right">
                <input type="button" value="Add New" id="disease_jqxButtonAdd" onclick="AddRecord();" />
            </td>
        </tr>
    </table>
</div>
<div id="progressContainer" class="progressLabelHidden">
    Please Wait...
</div>
<div id="mainSplitter1">
    <div>
        <div id='jqxWidget' style="font-size: 10px; font-family: Verdana; float: left; padding-bottom: 10px; width: 100%">
            <div id="disease_jqxgrid"></div>
        </div>
    </div>
    <div>
        <div style="height: 92%; width: 100%; border-bottom: 1px solid #aaaaaa; overflow-y: scroll">
            <table width="100%">
                <tr style="height: 30px;">
                    <td class="DetailGridFieldCaption">Disease ID
                    </td>
                    <td>
                        <input type="text" id="disease_jqxIdTxt" />
                    </td>
                </tr>
                <tr style="height: 30px;">
                    <td class="DetailGridFieldCaption">Disease Code
                    </td>
                    <td>
                        <input type="text" id="disease_jqxDiseaseCodeTxt" />
                    </td>
                </tr>
                <tr style="height: 30px;">
                    <td class="DetailGridFieldCaption">Sequence
                    </td>
                    <td>
                        <input type="text" id="disease_jqxSequenceTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Disease Name
                    </td>
                    <td>
                        <input type="text" id="disease_jqxDiseaseNameTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Is Valid?
                    </td>
                    <td>
                        <table>
                            <tr>
                                <td width="33%">Yes<input id="diseaseIsValid_yes" type="radio" name="diseaseIsValidRdo" value="yes" checked="checked"></td>
                                <td width="33%">No<input id="diseaseIsValid_no" type="radio" name="diseaseIsValidRdo" value="no"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">GB Name
                    </td>
                    <td>
                        <input type="text" id="disease_jqxGBNameTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Disease Category
                    </td>
                    <td>
                        <div id='disease_jqxDiseaseCatgDdn'></div>
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Diagnosed Rules
                    </td>
                    <td>
                        <input type="text" id="disease_jqxDiagRulesTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">High-risk Rules
                    </td>
                    <td>
                        <input type="text" id="disease_jqxHighRiskRulesTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Intermediate Risk Rules
                    </td>
                    <td>
                        <input type="text" id="disease_jqxInterRiskRulesTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Normal Rules
                    </td>
                    <td>
                        <input type="text" id="disease_jqxNormalRulesTxt" />
                    </td>
                </tr>
                <tr style="height: 30px">
                    <td class="DetailGridFieldCaption">Emergency Links
                    </td>
                    <td>
                        <input type="text" id="disease_jqxEmgRulesTxt" />
                    </td>
                </tr>
            </table>
        </div>
        <table style="width: 100%;">
            <tr>
                <td align="right">
                    <input type="button" value="Delete" id="disease_jqxButtonDelete" onclick="deleteButtonClick()" />
                    <input type="button" value="Save" id="disease_jqxButtonSave" onclick="saveButtonClick()" />
                    <input type="button" value="Cancel" id="disease_jqxButtonCancel" onclick="CancelRowEdit();" />
                </td>
            </tr>
        </table>
    </div>
</div>
