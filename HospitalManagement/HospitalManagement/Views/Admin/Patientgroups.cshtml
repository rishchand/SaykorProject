@{
    ViewBag.Title = "Rx";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@*CPC Common SCripts*@
<script type="text/javascript" src="~/Scripts/CPC/cpcCommon.js"></script>
<script type="text/javascript" src="~/Scripts/CPC/cpcCommonLookups.js"></script>
<script type="text/javascript" src="~/Scripts/epicapi.js"></script>

@*Temp Script*@
<script src="~/Scripts/CPC/admin/Patientgroups/Temp.js"></script>

@*Screen Specific Scripts*@
<script type="text/javascript" src="~/Scripts/CPC/Admin/Patientgroups/INIT.js"></script>
<script type="text/javascript" src="~/Scripts/CPC/Admin/Patientgroups/UI.js"></script>
<script type="text/javascript" src="~/Scripts/CPC/Admin/Patientgroups/CRUD.js"></script>

<div id="normal-header">
    <table style="height: 40px; width: 100%">
        <tr>
            <td>PATIENT GROUP MANAGEMENT</td>
        </tr>
    </table>
</div>
<div id="progressContainer" class="progressLabelHidden">
    Please Wait...
</div>
<div id="mainSplitter1">
    <div>
        <div style="border: none;" id="patientGrpExpander">
            <div class="jqx-hideborder">
                <table width="100%">
                    <tr>
                        <td>PATIENT GROUPS&nbsp;
                        <input type="button" value="Add New" id="PatientGroup_jqxButtonAdd" onclick="AddRecord();" />
                        </td>
                    </tr>
                </table>
            </div>
            <div class="jqx-hideborder jqx-hidescrollbars">
                <div id="PatientGroup_jqxgrid"></div>
            </div>
        </div>
    </div>
    <div>
        <div id="mainSplitter2">
            <div>
                <div style="border: none;" id="patientGrpDtlExpander">
                    <div class="jqx-hideborder">
                        PATIENT GROUP DETAILS
                    </div>
                    <div class="jqx-hideborder jqx-hidescrollbars">
                        <table style="width: 100%;">
                            <tr>
                                <td width="20%">
                                    <div style="position: relative">
                                        <img id="PatientGroup_profileImgDtlGrid" src="~/Images/doctorphoto2.png" width="100px" height="100px" style="margin-left: 2px;" />
                                        <input style="display: none; position: absolute; top: 75px; left: 20px" type="button" value="Upload" id="PatientGroup_jqxButtonUpload" />
                                    </div>
                                </td>
                                <td align="left" id="PatientGroup_sideTableID" class="DetailGridFieldCaption">0090019                        
                                </td>
                            </tr>
                        </table>
                        <div style="height: 75%; width: 100%; border-bottom: 1px solid #aaaaaa; overflow-y: scroll">
                            <table width="100%">
                                <tr style="height: 30px;">
                                    <td class="DetailGridFieldCaption">Patient Group Id
                                    </td>
                                    <td>
                                        <input type="text" id="PatientGroup_jqxIdTxt" />
                                    </td>
                                </tr>
                                <tr style="height: 30px;">
                                    <td class="DetailGridFieldCaption">Patient Group Name
                                    </td>
                                    <td>
                                        <input type="text" id="PatientGroup_jqxPatientGroupNameTxt" />
                                    </td>
                                </tr>
                                <tr style="height: 30px;">
                                    <td class="DetailGridFieldCaption">Patient Group Description
                                    </td>
                                    <td>
                                        <input type="text" id="PatientGroup_jqxPatientGroupDescTxt" />
                                    </td>
                                </tr>
                                <tr style="height: 30px;">
                                    <td class="DetailGridFieldCaption">Provider in Charge
                                    </td>
                                    <td>
                                        <input type="text" id="PatientGroup_jqxProviderInChargeTxt" />
                                    </td>
                                </tr>
                                <tr style="height: 30px;">
                                    <td class="DetailGridFieldCaption">Providers Responsible for the group
                                    </td>
                                    <td>
                                        <input type="text" id="PatientGroup_jqxProviderGroupTxt" />
                                    </td>
                                </tr>
                                <tr style="height: 30px;">
                                    <td class="DetailGridFieldCaption">Sort By
                                    </td>
                                    <td>
                                        <input type="text" id="PatientGroup_jqxSortByTxt" />
                                    </td>
                                </tr>
                                <tr style="height: 30px;">
                                    <td class="DetailGridFieldCaption">Is Enabled?
                                    </td>
                                    <td>
                                        <input type="text" id="PatientGroup_jqxIsEnabledTxt" />
                                    </td>
                                </tr>
                                <tr style="height: 30px;">
                                    <td class="DetailGridFieldCaption">Patients
                                    </td>
                                    <td>
                                        <input type="text" id="PatientGroup_jqxPatientsTxt" />
                                    </td>
                                </tr>
                                <tr style="height: 30px">
                                    <td class="DetailGridFieldCaption">Provider Type
                                    </td>
                                    <td>
                                        <div id='PatientGroup_jqxProviderTypeDdn'></div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <table style="width: 100%;">
                            <tr>
                                <td align="right">
                                    <input type="button" value="Delete" id="PatientGroup_jqxButtonDelete" onclick="deleteButtonClick()" />
                                    <input type="button" value="Save" id="PatientGroup_jqxButtonSave" onclick="saveButtonClick()" />
                                    <input type="button" value="Cancel" id="PatientGroup_jqxButtonCancel" onclick="CancelRowEdit();" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div>
                <div style="border: none;" id="patientListExpander">
                    <div class="jqx-hideborder">
                        SELECTED PATIENT LIST&nbsp;
                        <input type="button" value="Select Patient" id="PatientGroup_jqxButtonSelectPatient" onclick="SelectPatient();" />
                    </div>
                    <div class="jqx-hideborder jqx-hidescrollbars">
                        <div id="pg_jqxSelectedPatientGrid"></div>
                    </div>
                </div>
                <div id="selectPatientPopUp" title="Select Patient">
                    <div style="overflow: hidden;" id="windowContent">
                        <div id="pg_jqxAllPatientGrid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<table style="border: 0px solid #000; width: 100%">
    <tr>
        <td width="75%">
            <div id='jqxWidget' style="font-size: 10px; font-family: Verdana; float: left; padding-bottom: 10px; width: 100%">
            </div>
        </td>
        <td id="dtlsGrid" style="vertical-align: top; width: 25%"></td>
    </tr>
</table>
