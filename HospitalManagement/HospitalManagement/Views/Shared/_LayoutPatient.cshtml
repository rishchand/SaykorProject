<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="/Scripts/jqwidgets/styles/jqx.base.css" rel="stylesheet" />
    <link href="/Scripts/jqwidgets/styles/qtxTheme.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqwidget")
    <script type="text/javascript">
        $(document).ready(function () {
            // Initialize Header
            $('#topnav > ul > li').bind('click', jsddm_open)
            $('#topnav > ul > li > a').click(function () {
                if ($(this).attr('class') != 'active') {
                    $('#topnav ul li a').removeClass('active');
                    $(this).addClass('active');
                }
            });
        });
        var ddmenuitem = 0;
        function jsddm_open() {
            jsddm_close();
            ddmenuitem = $(this).find('ul.submenu').css('display', 'block');
        }
        function jsddm_close() {
            if (ddmenuitem) ddmenuitem.css('display', 'none');
        }
    </script>
</head>
<body style="background-color: #bfbfbf">
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <div class="site-title">
                    <table width="1080px" border="0">
                        <tr>
                            <td width="110px">
                                <img src="~/Images/DoctorPhoto.jpg" width="100px" height="100px" />
                            </td>
                            <td>
                                <span class="header-doctor">DR.</span>
                                <span class="header-doctor-name">DAVID WANG</span>
                            </td>
                            <td>
                                <div id="topnav">
                                    <ul>
                                        <li>
                                            <a href="#">SCHEDULE</a>
                                        </li>
                                        <li>
                                            <a href="#">GOALS</a>
                                            <ul class="submenu">
                                                <li><a href="#">Basic Information</a></li>
                                                <li><a href="#">Allergens</a></li>
                                                <li><a href="#">Living Conditions</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a href="#">ACTIVITIES</a>
                                            <ul class="submenu">
                                                <li><a href="#">Basic Information</a></li>
                                                <li><a href="#">Allergens</a></li>
                                                <li><a href="#">Personal History</a></li>
                                                <li><a href="#">Trauma</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a href="#">PATIENTS</a>
                                            <ul class="submenu">
                                                <li><a href="#">Basic Information</a></li>
                                                <li><a href="#">Allergens</a></li>
                                                <li><a href="#">Personal History</a></li>
                                                <li><a href="#">Trauma</a></li>
                                                <li><a href="#">Blood Transfusion</a></li>
                                                <li><a href="#">Hereditary Disease History</a></li>
                                                <li><a href="#">Family History of Diseases</a></li>
                                                <li><a href="#">Disability</a></li>
                                                <li><a href="#">Immunization</a></li>
                                                <li><a href="#">Living Conditions</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a href="#">PROVIDERS</a>
                                            <ul class="submenu">
                                                <li><a href="#">Basic Information</a></li>
                                                <li><a href="#">Allergens</a></li>
                                                <li><a href="#">Personal History</a></li>
                                                <li><a href="#">Trauma</a></li>
                                                <li><a href="#">Immunization</a></li>
                                                <li><a href="#">Living Conditions</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </header>
    <div class="body-wrapper">
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-right">
                    <p>
                        <font class="ARR">ALL RIGHTS RESERVED&nbsp;</font>
                        <img width="20px" height="20px" style="vertical-align: middle" src="~/Images/LogoSmall.png" />
                        <font class="logo">&nbsp;CPC</font>
                    </p>
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
